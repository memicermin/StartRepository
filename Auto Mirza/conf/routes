# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                                @controllers.HomeController.index()
# An example controller showing how to use dependency injection
GET         /count                           @controllers.CountController.count()
# An example controller showing how to write asynchronous code
GET         /message                         @controllers.AsyncController.message()

GET         /admin+add+sale                  @controllers.SaleController.newSale()
POST        /admin_new_sale                  @controllers.SaleController.saveSale()
GET         /all+products                    @controllers.SaleController.allProductsForSale()
GET         /product...                      @controllers.SaleController.openProduct(id: Long)
POST        /upd...                          @controllers.SaleController.updateSale(id: Long)
GET         /add-act...                      @controllers.SaleController.addAction(id: Long)
POST        /save-action...                  @controllers.SaleController.saveAction(id: Long)
GET         /add-img...                      @controllers.SaleController.addImages(id: Long)

GET         /admin_new_brand                 @controllers.AdminController.newBrand()
POST        /brand                           @controllers.AdminController.saveBrand()
GET         /titles                          @controllers.AdminController.listReclaimTitles()
POST        /save+title                      @controllers.AdminController.saveReclaimTitle()
GET         /delete-title                    @controllers.AdminController.deleteReclaimTitle(id: Long)
GET         /admin                           @controllers.AdminController.admin()
GET         /background                      @controllers.AdminController.addBacground()
GET         /test-background                 @controllers.AdminController.testBackground(id: Long)
GET         /change-background               @controllers.AdminController.changeBackground(id: Long)
GET         /del-background-image            @controllers.AdminController.deleteBackgroundImage(id: Long)
POST        /add+backgroung+images...        @controllers.AdminController.addBackgroundImages()
GET         /edit-pr                         @controllers.AdminController.editProduct(id: Long)


GET         /user+login...                   @controllers.UserController.login()
GET         /user+register...                @controllers.UserController.register()
POST        /user=new+user...                @controllers.UserController.registerUser()

POST        /log+in...                       @controllers.UserController.loginUser()
GET         /sing-up-...                     @controllers.UserController.singUp()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.versioned(path="/public", file: Asset)

